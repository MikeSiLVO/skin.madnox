            <control type="label" id="1190">
                <description>Movie Name Label</description>
                <top>10</top>
                <left>10</left>
                <width>500</width>
                <height>50</height>
                <font>font13</font>
                <textcolor>white</textcolor>
                <label>$INFO[Container(1190).ListItem.Title]</label>
            </control>
        </control>        
    </controls>


